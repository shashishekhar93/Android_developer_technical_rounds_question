<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingLeft="12sp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/point"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_shape"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/trailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/point"
        android:gravity="center"
        android:text="action status"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginLeft="14sp"
        app:layout_constraintStart_toEndOf="@+id/point"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewline"
        android:layout_width="2dp"
        android:layout_height="55dp"
        android:layout_below="@id/point"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/point"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/point"
        app:layout_constraintTop_toBottomOf="@+id/point" />

    <TextView
        android:layout_marginLeft="12sp"
        android:id="@+id/timeStampTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time stamp"
        android:textColor="@color/teal_700"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/trailText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/trailText"
        app:layout_constraintTop_toBottomOf="@+id/trailText" />


</androidx.constraintlayout.widget.ConstraintLayout>